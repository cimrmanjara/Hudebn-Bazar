{layout __WWW_DIR__ . '/templates/mainlayout.latte'}


{block content}
    <form n:name=signInForm id="frm-signInForm" class="block">
        <label>Uživatelské jméno<input n:name=username id="frm-signInForm-username"></label>
        <label>Heslo<input n:name=password id="frm-signInForm-password"></label>
